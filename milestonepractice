try:
    size_text = input()
    length_val = int(size_text)

    if length_val < 0:
        print("Error: The length of the list must be a non-negative integer.")
        raise SystemExit

    total = 0
    counter = 0

    while counter < length_val:
        try:
            num = int(input())
            total += num
            counter += 1
        except ValueError:
            print("Error: You must enter a numeric value.")
            raise SystemExit

    if length_val == 0:
        avg = 0.00
    else:
        avg = total / length_val

    print(f"{avg:.2f}")

except ValueError:
    print("Error: You must enter a numeric value.")
